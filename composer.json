{
    "name": "vivarium/framework",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Luca Cantoreggi",
            "email": "luca@cn7r66.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "infection/infection": "^0.27",
        "phpmd/phpmd": "^2.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^10.0",
        "psalm/plugin-phpunit": "^0.18",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Vivarium\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vivarium\\Test\\": "tests/"
        }
    },
    "scripts": {
        "infection": "vendor/bin/infection --coverage=tests-results/phpunit --min-msi=85 --min-covered-msi=95 --threads=4",
        "phpcs":     "vendor/bin/phpcs --report=junit --report-file=tests-results/phpcs/phpcs.xml --cache=cache/phpcs/result.cache src tests",
        "psalm":     "vendor/bin/psalm --output-format=checkstyle > tests-results/psalm/psalm.xml",
        "phpmd":     "vendor/bin/phpmd src xml phpmd.xml --report-file tests-results/phpmd/phpmd.xml",
        "phpstan":   "vendor/bin/phpstan analyse --no-ansi --error-format=checkstyle > tests-results/phpstan/phpstan.xml",
        "phpunit":   "vendor/bin/phpunit",

        "check" : [
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@psalm"
        ],
        "test" : [
            "@phpunit",
            "@infection"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    }
}
