<?xml version="1.0"?>
<ruleset name="Vivarium"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 https://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="https://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>The ruleset for Vivarium.</description>

    <rule ref="rulesets/cleancode.xml">
        <exclude name="StaticAccess"/>
    </rule>

    <rule ref="rulesets/cleancode.xml/StaticAccess">
        <properties>
            <property name="ignorepattern">
                <value>(^(create|from))i</value>
            </property>
            <property name="exceptions">
                <value>
                    \Vivarium\Check\Check,
                    \Vivarium\Collection\Util\KeyHash,
                    \Vivarium\Collection\Util\Vector,
                    \Vivarium\Equality\Equal,
                    \Vivarium\Type\Type
                </value>
            </property>
        </properties>
    </rule>

    <rule ref="rulesets/codesize.xml">
        <exclude name="TooManyPublicMethods"/>
    </rule>

    <rule ref="rulesets/codesize.xml/TooManyPublicMethods">
        <properties>
            <property name="maxmethods">
                <value>30</value>
            </property>
            <property name="ignorepattern">
                <value>(^(set|get|is|has|with|equals|hash))i</value>
            </property>
        </properties>
    </rule>

    <rule ref="rulesets/design.xml">
        <exclude name="CouplingBetweenObjects"/>
    </rule>

    <rule ref="rulesets/design.xml/CouplingBetweenObjects">
        <properties>
            <property name="maximum">
                <value>30</value>
            </property>
        </properties>
    </rule>

    <rule ref="rulesets/naming.xml">
        <exclude name="LongVariable"/>
        <exclude name="ShortVariable"/>
    </rule>

    <rule ref="rulesets/naming.xml/LongVariable">
        <properties>
            <property name="maximum">
                <value>30</value>
            </property>
            <property name="subtract-suffixes">
                <value>Count</value>
            </property>
        </properties>
    </rule>

    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="exceptions">
                <value>id,fn</value>
            </property>
        </properties>
    </rule>

    <rule ref="rulesets/controversial.xml" />
    <rule ref="rulesets/unusedcode.xml" />

</ruleset>